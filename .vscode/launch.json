    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": [
                "--reload",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Debug pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": [
                "${workspaceFolder}/tests",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}